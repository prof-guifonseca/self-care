{
  "name": "self-care",
  "version": "1.0.0",
  "description": "Self-Care PWA • Check-in de humor, dicas e citações (Functions + Offline)",
  "type": "module",
  "author": "Guilherme Fonseca",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/prof-guifonseca/self-care.git"
  },
  "bugs": {
    "url": "https://github.com/prof-guifonseca/self-care/issues"
  },
  "homepage": "https://seu-site.netlify.app/#readme",
  "keywords": [
    "self-care",
    "PWA",
    "Netlify",
    "JavaScript",
    "offline-first"
  ],
  "scripts": {
    "dev":   "netlify dev --port 8888",
    "build": "npm run lint && npm test && netlify build --context production",
    "start": "serve -s src",
    "lint":  "prettier --check \"**/*.{js,html,css,json}\"",
    "format":"prettier --write \"**/*.{js,html,css,json}\"",
    "test":  "echo \"(tests pendentes)\""
  },
  "engines": {
    "node": ">=18 <22"
  },
  "devDependencies": {
    "netlify-cli": "^20.1.1",
    "prettier": "^3.5.3",
    "serve": "^14.2.4"
  }
}
